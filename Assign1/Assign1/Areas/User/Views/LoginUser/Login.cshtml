@model Assign1.Areas.User.Models.LoginUserModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="OnLogin" asp-controller="LoginUser">
    <div>
        Username : <input type="text" asp-for="UserName" />
    </div>
    <div>
        Password : <input type="password" asp-for="Password" />
    </div>
    <div>
        <input type="submit" values="Login" />
    </div>
</form>

