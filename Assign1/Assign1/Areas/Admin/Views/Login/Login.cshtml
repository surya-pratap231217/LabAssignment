@model Assign1.Areas.Admin.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="OnLogin" asp-controller="Login">
    <div>
        Username : <input type="text" asp-for="UserName" />
    </div>
    <div>
        Password : <input type="password" asp-for="Password" />
    </div>
    <div>
        <input type="submit" values="Login" />
    </div>
</form>

